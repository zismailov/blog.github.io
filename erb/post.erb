<article class="post">
  <header>
  <h1><%= title %></h1>
  <% unless ENV['DRAFT'] %>
    <div class="metadata">
    <span class="date"><%= formatted_date %></span>&nbsp;&mdash;&nbsp;<a href="#disqus_thread" data-disqus-identifier="http://patshaughnessy.net<%= url %>" class="date">&nbsp; Comments and &nbsp; Reactions</a><br/>
    <% if date > Date.new(2010, 5, 1) || date == Date.new(2009, 6, 15) %>
      <a href="https://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-via="pat_shaughnessy" data-text="<%= title.gsub(" - Pat Shaughnessy", '') %>">Tweet</a><script type="text/javascript" src="//platform.twitter.com/widgets.js"></script>
    <% end %>
    </div>
  <% end %>
  </header>

  <section class="content">
    <%= body_html %>
  </section>

  <% unless ENV['DRAFT'] %>
    <section class="comments">
      <div id="disqus_thread"><script type='text/javascript'> 
          var disqus_identifier = 'http://patshaughnessy.net<%= url %>';
          var disqus_shortname = '<%= config[:disqus] %>';
          var disqus_title = '<%= title %>';
        </script></div>
      <script type="text/javascript" src="http://disqus.com/forums/<%= config[:disqus] %>/embed.js"> </script>
      <noscript><a href="http://<%= config[:disqus] %>.disqus.com/?url=ref">View the discussion thread.</a></noscript>
    </section>
  <% end %>
</article>
<% unless ENV['DRAFT'] %>
  <script type="text/javascript">
    var disqus_identifier = 'http://patshaughnessy.net<%= url %>';
    var disqus_shortname = '<%= config[:disqus] %>';
    var disqus_title = '<%= title %>';
    (function () {
        var s = document.createElement('script'); s.async = true;
        s.type = 'text/javascript';
        s.src = 'http://' + disqus_shortname + '.disqus.com/count.js';
        (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
    }());
  </script>
<% end %>
